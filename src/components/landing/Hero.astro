---
import Banner from "@/components/landing/Banner.astro";
import Testimonials from "@/components/landing/Testimonials.astro";
---

<section class="border-white/20  border-b">
  <div class="mx-auto border-white/20  border-x max-w-7xl">
    <div class="mx-auto">
      <div class="mx-auto lg:pt-36 gradient-grid px-8 py-12">
        <h1 class="text-white font-display uppercase text-2xl lg:text-5xl">
          National Alumni Meet 2024
        </h1>
        <h2 class="text-white/60 font-display text-xl lg:text-3xl">
          Marking Milestones, Crafting Memories
        </h2>
        <div class="pt-8 w-full flex">
          <div class="bg-carrot py-3 flex flex-row items-center pl-6 pr-4 rounded-full text-xl text-white/80">
            <span>Register Now</span>
            <svg class="pl-2 w-6 h-6" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="3" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" d="m8.25 4.5 7.5 7.5-7.5 7.5" />
            </svg>
          </div>
        </div>
      </div>
      <Banner />
      <Testimonials />
    </div>
  </div>
</section>
